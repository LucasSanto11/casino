#pour le son
from sound import Sound

class Sound:

    def _init_(self):
        self.music = pygame.mixer_music.load("#audio")
        self.music_volume = pygame.mixer.music.set_volume(0.25)
        self.music_play = pygame.mixer.music.play(loops=-1)
        self.sound_volume()
        self.music = Sound()
